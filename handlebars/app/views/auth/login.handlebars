<div class="container">
    <div class="row">
        <div class="container container--mini">
            <form action="/login" method="post">

            <div class="form-group mt-2">
                <label>Email</label>
                <input type="text" name="email" class="form-control" value="" size="20" autocomplete="off">
            </div>
            <div class="form-group mt-2">
                <label>Password</label>
                <input type="password" name="password" class="form-control" value="" size="20" autocomplete="off">
            </div>

            <div class="form-group mt-2">
            <button type="submit" class="btn btn-primary mb-4">Sign In</button>
            </div>

            </form>
        </div>
    </div>
</div>